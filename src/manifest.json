{
    "name": "0IMGUR & DDG Redirector",
    "version": "1.0",
    "description": "Redirects imgur.com to 0imgur.com and replaces all imgur IMAGE links on reddit and stackoverflow etc. with duckduckgo links.",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "permissions": [
        "http://*.imgur.com/",
        "https://*.imgur.com/,",
        "webRequest",
        "webRequestBlocking"
    ],
    "icons": {
        "16": "images/imgur16.png",
        "32": "images/imgur32.png",
        "48": "images/imgur48.png",
        "128": "images/imgur128.png"
    },
    "browser_action": {}
}